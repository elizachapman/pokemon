public class Pokemon {
    private String name;
    private String type;
    private String color;
    private String category;
    private String weakness;

    public Pokemon() {
        name = "Pikachu";
        type = "Electric";
        color = "yellow";
        category = "mouse";
        weakness = "ground";
        System.out.println(name+", "+type+", "+color+", "+category+", "+weakness);
    }


    public Pokemon(String pokName, String pokType, String pokColor, String pokCategory, String pokWeakness, String pokDamage) {
        name = pokName;
        type = pokType;
        color = pokColor;
        category = pokCategory;
        weakness = pokWeakness;
        

        public String getName() {
            return name;
        }
    
        public String getType() {
            return type;
        }
    
        public String getColor() {
            return color;
        }
    
        public String getCategory() {
            return category;
        }
    
        public String getWeakness() {
            return weakness;
        }

    public String toString() {
        return name + ", " + type + ", " + color + ", " + category + ", " + weakness;
    }

    public void setpokName(String name){
        pokName = name;
    }
    public void setpokType(String type){
        pokType = type;
    }
    public void setpokColor(String color){
        pokColor = color;
    }
    public void setpokCatgeory(String category){
        pokCategory = category;
    }
    public void setpokWeakness(String weakness){
        pokWeakness = weakness;
    }

    public void battleStart() {
        System.out.println("Another Trainer is issuing a challenge");
        System.out.println("Zebstrika appeared.");
    }

    public Integer attack(int damage) {
        damage = 10;
        return damage;

    }

    public Integer defend() {
        int damage = (int) (Math.random() * 15);
        return damage;

    }

    public Integer hor1() {
        return -15;
    }

    public Integer hor2() {
        return -8;
    }

    public Integer pik1() {
        return -20;
    }

    public Integer pik2() {
        return -4;
    }

    public Integer rat1() {
        return -5;
    }

    public Integer rat2() {
        return -6;
    }

    public Integer eev1() {
        return (int) (Math.random() * 20);
    }

    public Integer eev2() {
        return (int) (Math.random() * 5);
    }

    public Integer squirtle1() {
        return (int) (Math.random() * 50);
    }

    public Integer squirtle2() {
        return -9;
    }

}
